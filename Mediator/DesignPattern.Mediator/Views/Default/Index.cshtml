@using DesignPattern.Mediator.Mediators.Results
@model List<GetAllProductQueryResults>
@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Type</th>
                <th>Stock Count</th>
                <th>Stock Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Type</td>
                    <td>@product.Stock</td>
                    <td>@product.StockType</td>
                    <td>
                        <a asp-action="UpdateProduct" asp-route-id="@product.Id" class="btn btn-warning">Update</a>
                        <a asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="GetProduct" asp-route-id="@product.Id" class="btn btn-dark">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a asp-action="CreateProduct" class="btn btn-success">Create Product</a>
</div>




