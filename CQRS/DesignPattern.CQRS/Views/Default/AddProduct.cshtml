@model DesignPattern.CQRS.CQRS.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <form method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter Product Name">
        </div>
        <div class="form-group">
            <label for="Price">Price</label>
            <input type="text" class="form-control" id="Price" asp-for="Price" placeholder="Enter Price">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="text" class="form-control" id="Description" asp-for="Description" placeholder="Enter Description">
        </div>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
</div>
